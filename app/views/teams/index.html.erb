<p id="notice"><%= notice %></p>

<h1>listing teams</h1>

<table>

  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td> <%= link_to '+', teams_players_path(team), remote: true, id: team.name %></td>
        <td><%= team.id %></td>
        <td><%= team.name %></td>
        <td><%= team.rating %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tbody id='players_<%= team.id %>' style='display: none'></tbody>
    <% end %>
  </tbody>
</table>

